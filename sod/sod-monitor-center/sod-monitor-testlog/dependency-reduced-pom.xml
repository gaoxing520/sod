<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>sod-monitor-center</artifactId>
    <groupId>com.htht</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>sod-monitor-testlog</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.Log4jTestDemo</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <releases />
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </snapshots>
      <id>maven-ali</id>
      <url>http://maven.aliyun.com/nexus/content/groups/public//</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.elasticsearch</groupId>
      <artifactId>elasticsearch</artifactId>
      <version>6.8.7</version>
      <scope>system</scope>
      <systemPath>D:/java/elasticsearch-7.7.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.elasticsearch</groupId>
      <artifactId>elasticsearch-core</artifactId>
      <version>6.8.7</version>
      <scope>system</scope>
      <systemPath>D:/java/elasticsearch-core-7.7.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.elasticsearch</groupId>
      <artifactId>x-pack</artifactId>
      <version>6.8.7</version>
      <scope>system</scope>
      <systemPath>D:/java/x-pack-core-7.7.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.elasticsearch</groupId>
      <artifactId>lucese</artifactId>
      <version>6.8.7</version>
      <scope>system</scope>
      <systemPath>D:/java/lucene-core-8.5.1.jar</systemPath>
    </dependency>
  </dependencies>
</project>

